<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.rentokil.pci.rauditor.QSR_Cus_Info_2">


    <include layout="@layout/toolbar_category"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/title_background"
        android:elevation="3dp"
        android:layout_marginLeft="-10dp"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:paddingTop="12dp"
        android:text="Customer Sevice Infor.. (QSR)"
        android:textColor="#ffffff"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <ScrollView

        android:layout_weight="1"
        android:id="@+id/scrlbar"
        android:background="#f5f7fa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content">



            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"

                android:layout_marginTop="5dp">


                <RadioGroup
                    android:id="@+id/qsr_cusinfo_radiob1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:layout_marginTop="20dp" >

                    <RadioButton
                        android:gravity="center_vertical"
                        android:theme="@style/SampleTheme_green"
                        android:textColor="@color/text_color"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"

                        android:text="RENTOKIL PCI" />

                    <RadioButton

                        android:theme="@style/SampleTheme_green"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="CUSTOMER" />




                </RadioGroup>



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Contract"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:layout_marginTop="5dp">



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Area of Facility(Sq.ft / Sq.mt.)"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_border">


                    <EditText
                        android:id="@+id/qsr_cusinfo_et_area"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="textCapWords|textCapSentences"
                        android:layout_marginRight="10dp"
                     android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:hint="Tap here to edit"
                        android:padding="15dp"
                        android:textSize="13dp" />

                </LinearLayout>



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:layout_marginTop="5dp">



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Contract Value"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_border">


                    <EditText
                        android:id="@+id/qsr_cusinfo_et_contract"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        android:background="#00000000"
                        android:inputType="textCapWords|textCapSentences"
                        android:hint="Tap here to edit"
                        android:padding="15dp"
                        android:textSize="13dp" />

                </LinearLayout>



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"

                android:layout_marginTop="5dp">


                <TextView

                    android:id="@+id/qsr_cusinfo_selectrs1"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="40dp"
                    android:background="#0404B4"
                    android:gravity="center"
                    android:padding="9dp"
                    android:text="SELECT RESPONSES"
                    android:textColor="#fff"
                    android:textSize="16dp" />






                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Services under Contract"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qsr_cusinfo_disp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:inputType="textCapWords|textCapSentences"
                    android:textColor="#E50404"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"

                android:layout_marginTop="5dp">


                <TextView

                    android:id="@+id/qsr_cusinfo_selectrs2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="40dp"
                    android:background="#0404B4"
                    android:gravity="center"
                    android:padding="9dp"
                    android:text="SELECT RESPONSES"
                    android:textColor="#fff"
                    android:textSize="16dp" />







                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Pest Covered"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/qsr_cusinfo_disp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#E50404"
                    android:layout_marginTop="100dp"
                    android:inputType="textCapWords|textCapSentences"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:layout_marginTop="5dp">



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Other Services &amp; Pest"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_border">


                    <EditText
                        android:id="@+id/qsr_cusinfo_0ther"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:background="#00000000"
                        android:inputType="textCapWords|textCapSentences"
                        android:hint="Tap here to edit"
                        android:padding="15dp"
                        android:textSize="13dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>





        </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/scrlbar"

        >

        <Button
            android:id="@+id/qsrcusinfobck"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Back" />
        <Button
            android:id="@+id/qsrcusinfosub"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:layout_marginLeft="1dp"
            style="@style/Widget.AppCompat.Button.Colored"

            android:text="Next" />



        <Button
            android:id="@+id/qsrcusinfosub1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#FDFEFE"
            android:background="#27AE60"
            android:text="NEXT" />



    </LinearLayout>
</LinearLayout>
