<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/bulrcp"
        android:scaleType="centerCrop"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/signupimage">




        </RelativeLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif1"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="280dp"

            android:src="@drawable/source" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bulrcp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-170dp"
            android:layout_gravity="center"
            android:src="@drawable/pcinew" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="160dp"
            android:orientation="vertical">


            <customfonts.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:background="#0000"
                android:gravity="left"

                android:hint="Name"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:background="#dad8d8" />

            <customfonts.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:background="#0000"
                android:gravity="left"
                android:hint="Employee Id"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:background="#dad8d8" />


            <customfonts.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:background="#0000"
                android:gravity="left"
                android:hint="Email"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:background="#dad8d8" />

            <customfonts.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:background="#0000"
                android:gravity="left"
                android:hint="Branch"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:background="#dad8d8" />

            <customfonts.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:background="#0000"
                android:gravity="left"
                android:hint="Country"
                android:inputType="text"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:background="#dad8d8" />

            <customfonts.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:background="#0000"
                android:gravity="left"
                android:hint="Description"
                android:inputType="text"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:background="#dad8d8" />



            <customfonts.MyTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="16dp"
                android:background="#2b73e1"
                android:gravity="center"
                android:padding="9dp"
                android:text="Request"
                android:textColor="#fff"
                android:textSize="16dp"


                />



        </LinearLayout>

        <customfonts.MyTextView
            android:id="@+id/acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have account?"
            android:layout_marginTop="610dp"
            android:gravity="center"
            android:lines="1"

            />
        <TextView
            android:id="@+id/signinhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signin here"
            android:textColor="#2b73e1"

            android:gravity="center"
            android:lines="1"
            android:layout_marginTop="632dp"

            />









    </FrameLayout>







</ScrollView>