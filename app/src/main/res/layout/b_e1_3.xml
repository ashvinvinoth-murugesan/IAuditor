<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:windowSoftInputMode="stateHidden"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain">

    <com.rentokil.pci.rauditor.MSOT.SliderLayout
        android:id="@+id/slider"
        style="@style/AlertDialog.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="#fff"
        custom:pager_animation_span="1100">

        <requestFocus />
    </com.rentokil.pci.rauditor.MSOT.SliderLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/uperslider">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/Activity_b1_head"
                android:textColor="#fff"
                android:textSize="21dp" />

            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="(WAH)"
                android:textColor="#ccffffff"
                android:textSize="@dimen/text" />


        </LinearLayout>

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_white"

                android:layout_gravity="left"
                android:padding="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="rAuditor"
                android:textColor="#FFFF"
                android:textSize="@dimen/text" />



            <!--********SLIDER**********-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="261dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <!--*****HAIR CUT********-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedrect"
                    android:orientation="horizontal"
                    android:padding="16dp"

                    >

                    <customfonts.MyTextViewMSOT
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Activity_1_msot"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text" />


                    <customfonts.MyTextViewMSOT

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Activity_1_submit"
                        android:textSize="@dimen/text"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:paddingLeft="19dp"
                        android:paddingRight="19dp"
                        android:layout_marginLeft="16dp"
                        />





                </LinearLayout>

                <LinearLayout
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >



                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout1"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        >
                        <customfonts.MyTextViewMSOT
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Activity_e1_field_1"
                            android:textSize="@dimen/text"
                            android:textColor="@color/text"
                            />

                        <RadioGroup
                            android:id="@+id/qsr_cuspest_rd2"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:checked="false"
                            android:layout_marginTop="12dp" >



                            <RadioButton

                                android:gravity="center_vertical"
                                android:theme="@style/SampleTheme_green"
                                android:textColor="@color/text_color"

                                android:layout_width="70dp"
                                android:layout_marginLeft="-110dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="@string/Activity_rd_yes" />


                            <RadioButton

                                android:theme="@style/SampleTheme_green"
                                android:layout_marginTop="-32dp"
                                android:layout_width="90dp"
                                android:layout_marginLeft="-36dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_par" />

                            <RadioButton

                                android:theme="@style/SampleTheme_green"

                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-32dp"
                                android:layout_marginLeft="40dp"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_no" />

                            <RadioButton

                                android:theme="@style/SampleTheme_green"

                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-32dp"
                                android:layout_marginLeft="100dp"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_na" />





                        </RadioGroup>



                        <TextView
                            android:id="@+id/addcmt1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/plusymbol"/>


                        <TextView
                            android:id="@+id/img_toast1"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="-25dp"
                            android:background="@drawable/infonewicon"/>





                        <TextView
                            android:id="@+id/image_Q1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="67dp"
                            android:layout_marginTop="-24dp"
                            android:background="@drawable/cameraicon1"/>



                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_layout_Q1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"

                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="-30dp"
                            android:layout_marginLeft="-15dp"
                            app:civ_border_width="5dp"
                            app:civ_border_color="#FFFFFF"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/cmt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/text"
                            android:textStyle="italic"
                            android:textColor="@color/text_cmt"
                            />




                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/layout2"
                        android:orientation="vertical"
                        >
                        <customfonts.MyTextViewMSOT
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Activity_e2_field_2"
                            android:textSize="@dimen/text"
                            android:textColor="@color/text"
                            />
                        <RadioGroup
                            android:id="@+id/qsr_cuspest_rd3"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:checked="false"
                            android:layout_marginTop="12dp" >



                            <RadioButton

                                android:gravity="center_vertical"
                                android:theme="@style/SampleTheme_green"
                                android:textColor="@color/text_color"

                                android:layout_width="70dp"
                                android:layout_marginLeft="-110dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="@string/Activity_rd_yes" />


                            <RadioButton

                                android:theme="@style/SampleTheme_green"
                                android:layout_marginTop="-32dp"
                                android:layout_width="90dp"
                                android:layout_marginLeft="-36dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_par" />

                            <RadioButton

                                android:theme="@style/SampleTheme_green"

                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-32dp"
                                android:layout_marginLeft="40dp"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_no" />

                            <RadioButton

                                android:theme="@style/SampleTheme_green"

                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-32dp"
                                android:layout_marginLeft="100dp"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_na" />


                        </RadioGroup>

                        <TextView
                            android:id="@+id/addcmt2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/plusymbol"/>






                        <TextView
                            android:id="@+id/image_Q2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="43dp"
                            android:layout_marginTop="-27dp"
                            android:background="@drawable/cameraicon1"/>



                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_layout_Q2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="-30dp"
                            android:layout_marginLeft="-30dp"
                            app:civ_border_width="5dp"
                            app:civ_border_color="#FFFFFF"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/cmt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/text"

                            />




                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout3"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        >
                        <customfonts.MyTextViewMSOT
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Activity_e3_field_3"
                            android:textSize="@dimen/text"
                            android:textColor="@color/text"
                            />
                        <RadioGroup
                            android:id="@+id/qsr_cuspest_rd4"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:checked="false"
                            android:layout_marginTop="12dp" >



                            <RadioButton

                                android:gravity="center_vertical"
                                android:theme="@style/SampleTheme_green"
                                android:textColor="@color/text_color"

                                android:layout_width="70dp"
                                android:layout_marginLeft="-110dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="@string/Activity_rd_yes" />


                            <RadioButton

                                android:theme="@style/SampleTheme_green"
                                android:layout_marginTop="-32dp"
                                android:layout_width="90dp"
                                android:layout_marginLeft="-36dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_par" />

                            <RadioButton

                                android:theme="@style/SampleTheme_green"

                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-32dp"
                                android:layout_marginLeft="40dp"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_no" />

                            <RadioButton

                                android:theme="@style/SampleTheme_green"

                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-32dp"
                                android:layout_marginLeft="100dp"
                                android:textColor="@color/text_color"
                                android:text="@string/Activity_rd_na" />

                        </RadioGroup>

                        <TextView
                            android:id="@+id/addcmt3"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/plusymbol"/>


                        <TextView
                            android:id="@+id/img_toast2"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="-25dp"
                            android:background="@drawable/infonewicon"/>





                        <TextView
                            android:id="@+id/image_Q3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="67dp"
                            android:layout_marginTop="-24dp"
                            android:background="@drawable/cameraicon1"/>



                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_layout_Q3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="-30dp"
                            android:layout_marginLeft="-15dp"
                            app:civ_border_width="5dp"
                            app:civ_border_color="#FFFFFF"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/cmt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/text"
                            android:textStyle="italic"
                            android:textColor="@color/text_cmt"
                            />




                    </LinearLayout>




                </LinearLayout>

                <com.rentokil.pci.rauditor.MSOT.ExpandableHeightListView
                    android:id="@+id/haircut_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >




                </com.rentokil.pci.rauditor.MSOT.ExpandableHeightListView>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
