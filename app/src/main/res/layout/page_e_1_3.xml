<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:windowSoftInputMode="stateHidden"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain">

    <com.rentokil.pci.rauditor.MSOT.SliderLayout
        android:id="@+id/slider"
        style="@style/AlertDialog.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="#fff"
        custom:pager_animation_span="1100">

        <requestFocus />
    </com.rentokil.pci.rauditor.MSOT.SliderLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/uperslider">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="WORKING AT HEIGHT(E)"
                android:textColor="#fff"
                android:textSize="21dp" />

            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="(WAH)"
                android:textColor="#ccffffff"
                android:textSize="@dimen/text" />


        </LinearLayout>

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_white"
                android:layout_gravity="left"
                android:id="@+id/img_tool12"
                android:padding="16dp"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="rAuditor"
                android:textColor="#FFFF"
                android:textSize="@dimen/text" />



            <!--********SLIDER**********-->


            <LinearLayout
                android:id="@+id/haircut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="261dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <!--*****HAIR CUT********-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedrect"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    >



                    <customfonts.MyTextViewMSOT
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Management Safety Observation Tour (MSOT) "
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text" />


                    <customfonts.MyTextViewMSOT

                        android:id="@+id/sub_page5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEXT"
                        android:textSize="@dimen/text"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:paddingLeft="19dp"
                        android:paddingRight="19dp"
                        android:layout_marginLeft="16dp"
                        />





                </LinearLayout>

                <LinearLayout
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <customfonts.MyTextViewMSOT
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1.Activities observed involved work at height?"
                            android:textSize="@dimen/text"
                            android:textColor="@color/text"
                            />
                        <EditText
                            android:id="@+id/et1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint=""
                            android:inputType="textCapWords"
                            android:background="@drawable/shape"
                            android:textColor="@color/text"
                            android:layout_marginTop="6dp"
                            />



                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        >
                        <customfonts.MyTextViewMSOT
                            android:id="@+id/title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2.Has staff been trained on the work at height? Take picture of staffâ€™s WAH Training ID Card if available."
                            android:textSize="@dimen/text"
                            android:textColor="@color/text"
                            />
                        <EditText
                            android:id="@+id/et2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint=""
                            android:inputType="textCapWords"
                            android:background="@drawable/shape"
                            android:textColor="@color/text"
                            android:layout_marginTop="6dp"
                            />



                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        >
                        <customfonts.MyTextViewMSOT
                            android:id="@+id/title3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3.Has staff considered other safer way before working at height?"
                            android:textSize="@dimen/text"
                            android:textColor="@color/text"
                            />
                        <EditText
                            android:id="@+id/et3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint=""
                            android:inputType="textCapWords"
                            android:background="@drawable/shape"
                            android:textColor="@color/text"
                            android:layout_marginTop="6dp"
                            />


                    </LinearLayout>

                </LinearLayout>

                <com.rentokil.pci.rauditor.MSOT.ExpandableHeightListView
                    android:id="@+id/haircut_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </com.rentokil.pci.rauditor.MSOT.ExpandableHeightListView>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</FrameLayout>
